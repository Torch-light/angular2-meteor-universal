{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./modules",
    "outDir": "./build"
  },
  "files": [
    "modules/client.ts",
    "modules/angular_uni.ts",
    "modules/client_renderer.ts",
    "modules/server_renderer.ts",
    "modules/meteor_xhr_impl.ts",
    "typings/main.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
